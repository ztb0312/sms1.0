<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app03.dao.UserMapper">
	<!--查询所有用户信息 -->

	<select id="findAll" resultType="com.briup.app03.bean.User">
		select * from poll_user
	</select>
	<!-- -->
	<!-- 通过id 查询用户信息 -->
	<select id="findById" parameterType="long"
		resultType="com.briup.app03.bean.User">
		select * from poll_user where id=#{id}
	</select>
	<!-- -->
	<!-- 保存用户信息 -->
	<insert id="save" parameterType="com.briup.app03.bean.User">
		insert into poll_user
		values(null,#{name},#{gender},#{birth},#{hiredate})
	</insert>
	<!-- -->
	<!-- 修改用户信息 -->
	<update id="update" parameterType="com.briup.app03.bean.User">
		update poll_user
		set name
		=#{name},  gender=#{gender},birth=#{birth},hiredate=#{hiredate}
		
		where id = #{id}
	</update>
	<!-- -->
	<!-- 删除用户信息 -->
	<delete id="delete" parameterType="long">
		delete from poll_user where
		id=#{id}

	</delete>
	<!-- -->
</mapper>